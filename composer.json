{
    "name": "leeovery/laravel-newsletter",
    "description": "Driver-based Newsletter provider for Laravel",
    "keywords": [
        "leeovery",
        "laravel-newsletter"
    ],
    "homepage": "https://github.com/leeovery/laravel-newsletter",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Lee Overy",
            "email": "me@leeovery.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "illuminate/support": "5.8.*",
        "sendinblue/api-v3-sdk": "^6.1"
    },
    "require-dev": {
        "orchestra/testbench": "3.8.*",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Leeovery\\LaravelNewsletter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Leeovery\\LaravelNewsletter\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Leeovery\\LaravelNewsletter\\LaravelNewsletterServiceProvider"
            ],
            "aliases": {
                "LaravelNewsletter": "Leeovery\\LaravelNewsletter\\LaravelNewsletterFacade"
            }
        }
    }
}
